export JAVA_OPTS="-server -Xms1024m -Xmx2048m -XX:MaxPermSize=2g -XX:+UseConcMarkSweepGC -XX:+CMSClassUnloadingEnabled -XX:+PrintVMOptions"
export MAVEN_OPTS="$JAVA_OPTS"
export ANT_OPTS="$JAVA_OPTS"
export GRADLE_OPTS="$JAVA_OPTS"
export JPDA_ADDRESS="8002"

# Set Sublime Text as default text editor
export EDITOR="subl -n"

# Prefer US English and use UTF-8
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export PGHOST=localhost

# File storage and search engine of CLcore
export spring_profiles_active="no-search,fs-storage"

export VAGRANT_DEFAULT_PROVIDER=virtualbox

# Brew options
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
export HOMEBREW_NO_ANALYTICS=true
export HOMEBREW_CASK_OPTS="--no-quarantine"

# Use 256-colors mode
export TERM="xterm-256color"

# changes hex 0x15 to delete everything to the left of the cursor,
# rather than the whole line
bindkey "^U" backward-kill-line

# binds hex 0x18 0x7f with deleting everything to the left of the cursor
bindkey "^X\\x7f" backward-kill-line

# adds redo
bindkey "^X^_" redo
