if [ -f $DROPBOX_HOME/etc/api.keys ]; then
	. $DROPBOX_HOME/etc/api.keys
fi

export JAVA_OPTS="-server -Xms512m -Xmx512m -XX:MaxPermSize=128m"
export MAVEN_OPTS="$JAVA_OPTS"
export ANT_OPTS="$JAVA_OPTS"
if [ -d "$REBEL_HOME" ]; then
  export GRADLE_OPTS="-javaagent:$REBEL_HOME/jrebel.jar -Drebel.log4j-plugin=false $JAVA_OPTS"
else
  export GRADLE_OPTS="$JAVA_OPTS"
fi
export EDITOR="subl -w"