export JAVA_OPTS="-server -Xms1024m -Xmx1024m -XX:MaxPermSize=512m"
export MAVEN_OPTS="$JAVA_OPTS"
export ANT_OPTS="$JAVA_OPTS"
export GRADLE_OPTS="$JAVA_OPTS"
export JPDA_ADDRESS="8002"

# Set Sublime Text as default text editor
export EDITOR="subl -w"

# Setting textmate as SVN_EDITOR
SVN_EDITOR="subl"

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"