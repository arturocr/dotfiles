# Git
alias gst='git status'
alias gpl='git smart-pull'
alias gps='git push'
alias gt='git track'
alias gco='git co'
alias gl='git l'
alias glo='git lol'
alias gcm='git cm'
alias gun='git unstage'
alias gts='git staged'
alias gdf='git unstaged'
alias ga='git add . ; git status'

# Command Enhancements

# Utility
alias reload='source ~/.zshrc'
alias edit-zsh='subl ~/.zshrc'
alias edit-hosts="sudo subl /private/etc/hosts"
alias edit-vhosts="sudo subl /Applications/XAMPP/xamppfiles/etc/extra/httpd-vhosts.conf"
alias serve="python -m SimpleHTTPServer"
alias psx="ps ax | grep $1"
alias flushcache="dscacheutil -flushcache"

# Quicker cd
alias ..="cd .."

# My Code folder
code() {
  cd ~/Sites/
}

# Common -- Some are from Damian Conway
alias ls='ls -G'
alias a='ls -A' # -A all except literal . ..
alias la="ls -A -l -G"
alias c='clear'
alias cdd='cd -'  # goto last dir cd'ed from
alias cl='clear; l'
function cdc() { 
    cd $1; ls 
}
alias cls='clear; ls'
alias h='history'
alias l.='ls -d .[^.]*'
alias l='ls -lhGt'  # -l long listing, most recent first
                    # -G color
alias lh='ls -lh'
alias ll='ls -lhG'  # -l long listing, human readable, no group info
alias lt='ls -lt' # sort with recently modified first
alias md='mkdir -p'
alias s='cd ..'   # up one dir

function take() {
    mkdir -p "$1"
    cd "$1" 
}

alias e='exit'
alias k9="killall -9"
function killnamed () {
	ps ax | grep $1 | cut -d ' ' -f 2 | xargs kill
}

function zipr() {
	zip -r $1.zip $1
}

# Finder
alias o='open . &'

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# Ruby
alias r="rake"

# Tomcat
alias tomapps="open $CATALINA_HOME/webapps"
alias tomup="catalina start"
alias tomdown="catalina stop"
alias tomdebug="catalina jpda start"
alias tomlog="tail -f $CATALINA_HOME/logs/catalina.out"
