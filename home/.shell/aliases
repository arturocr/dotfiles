# Git Smart
alias gup="git smart-pull"
alias gm="git smart-merge"
alias gl="git smart-log"

# Git commit search
function git-find() {
  git log -i --grep=$1
}

# tig
alias tst='tig status'

# Command Enhancements

# Utility
alias reload='source ~/.zshrc'
alias edit-zsh='subl ~/.zshrc'
alias edit-hosts="sudo subl /etc/hosts"
alias serve="python -m SimpleHTTPServer"
alias psx="ps ax | grep $1"
alias flushdnscache="sudo killall -HUP mDNSResponder"
alias filetree="ls -R | grep ":$" | sed -e 's/:$//' -e 's/[^-][^\/]*\//--/g' -e 's/^/ /' -e 's/-/|/'"
alias fuck='$(thefuck $(fc -ln -1))'

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# Quicker cd
alias ..="cd .."
alias ...="cd ../.."

# Empty the Trash on all mounted volumes and the main HDD
# Also, clear Appleâ€™s System Logs to improve shell startup speed
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

# My Code folder
code() {
  cd ~/Projects/
}

# Common -- Some are from Damian Conway
alias ls='ls -G'
alias a='ls -A' # -A all except literal . ..
alias la="ls -A -l -G"
alias c='clear'
alias cdd='cd -'  # goto last dir cd'ed from
alias cl='clear; l'
function cdc() {
    cd $1; ls
}
alias cls='clear; ls'
alias h='history'
alias l.='ls -d .[^.]*'
alias l='ls -lhGt'  # -l long listing, most recent first
                    # -G color
alias lh='ls -lh'
alias ll='ls -lhG'  # -l long listing, human readable, no group info
alias lt='ls -lt' # sort with recently modified first
alias md='mkdir -p'
alias s='cd ..'   # up one dir

function take() {
    mkdir -p "$1"
    cd "$1"
}

alias e='exit'
alias k9="killall -9"
function killnamed () {
	ps ax | grep $1 | cut -d ' ' -f 2 | xargs kill
}
alias unfreezeDock="killall ibtoold pboard Dock"

function zipr() {
	zip -r $1.zip $1
}

# Finder
alias o='open . &'

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# Ruby
alias r="rake"

# Tomcat
alias simulateProd="SPRING_PROFILES_ACTIVE=production"
alias checktomcat="~/.tomcat-check"
alias tomapps="open $CATALINA_HOME/webapps"
alias tomup="sh $CATALINA_HOME/bin/catalina.sh start"
alias tomdown="sh $CATALINA_HOME/bin/catalina.sh stop"
alias tomdebug="sh $CATALINA_HOME/bin/catalina.sh jpda start"
alias tomlog="tail -f $CATALINA_HOME/logs/catalina.out"
alias generateEclipseProject="mvn -o org.apache.maven.plugins:maven-eclipse-plugin:2.6:eclipse"

function canary(){
   open -a "Google Chrome Canary" --args --remote-debugging-port=9222 --user-data-dir="$HOME/.chrome-user-data" $1
}

function changeJava() {
    export JAVA_HOME="$(/usr/libexec/java_home -v 1.$1)"
}

function getConsoleExclude() {
  echo "^((?!$1).)+$" | pbcopy
  echo "^((?!$1).)+$"
  echo "The regex has been copied to the clipboard!"
}

# Android
alias androidSS='adb shell /system/bin/screencap -p /sdcard/screenshot.png && adb pull /sdcard/screenshot.png ~/Desktop/screenshot.png'

# Vagrant
alias vg="vagrant"
alias vgup="vg up"
alias vghalt="vg halt"
alias vgsusp="vg suspend"
alias vgssh="vg ssh"

# Apache
alias edit-httpdconf-global="subl /etc/apache2/httpd.conf"
alias edit-httpdconf-mine="subl /etc/apache2/users/arturo.conf"
alias edit-vhosts="subl /etc/apache2/extra/httpd-vhosts.conf"
alias apacheup="sudo apachectl start"
alias apachedown="sudo apachectl stop"
alias apacherestart="sudo apachectl restart"
alias apachetest="sudo apachectl -t"

# Fix cam
function fixCam() {
  sudo killall VDCAssistant
  sudo killall AppleCameraAssistant
}

# Fix mic
function fixMic() {
  sudo killall coreaudiod
}

### SERVER SERVICES ALIAS
# Nginx
alias nginx.start='sudo launchctl load /Library/LaunchDaemons/homebrew.mxcl.nginx.plist'
alias nginx.stop='sudo launchctl unload /Library/LaunchDaemons/homebrew.mxcl.nginx.plist'
alias nginx.restart='nginx.stop && nginx.start'

# PHP-FPM
alias php-fpm.start="launchctl load -w ~/Library/LaunchAgents/homebrew.mxcl.php56.plist"
alias php-fpm.stop="launchctl unload -w ~/Library/LaunchAgents/homebrew.mxcl.php56.plist"
alias php-fpm.restart='php-fpm.stop && php-fpm.start'

# MySQL
alias mysql.start="launchctl load -w ~/Library/LaunchAgents/homebrew.mxcl.mysql.plist"
alias mysql.stop="launchctl unload -w ~/Library/LaunchAgents/homebrew.mxcl.mysql.plist"
alias mysql.restart='mysql.stop && mysql.start'

# Nginx Logs
alias nginx.logs.error='tail -250f /usr/local/etc/nginx/logs/error.log'
alias nginx.logs.access='tail -250f /usr/local/etc/nginx/logs/access.log'
alias nginx.logs.default.access='tail -250f /usr/local/etc/nginx/logs/default.access.log'
alias nginx.logs.default-ssl.access='tail -250f /usr/local/etc/nginx/logs/default-ssl.access.log'